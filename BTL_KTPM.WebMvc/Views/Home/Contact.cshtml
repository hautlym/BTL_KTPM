@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="banner">
        <div class="inner">
            <div class="container text-center">
                <p class="title-heading">Liên hệ</p>
                <p class="intro">Trang chủ/Liên hệ</p>
            </div>
        </div>
    </div>
    <div class="contact-us">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="info">
                        <div class="info-heading">Thông tin</div>
                        <div class="addresss d-flex align-items-center">
                            <i class="fas fa-map-marked-alt"></i>
                            <p>251 Nam Yên, Nam Từ Liêm, Hà Nội, VN</p>
                        </div>
                        <hr class="dashed">
                        <div class="phone d-flex align-items-center">
                            <i class="fas fa-phone"></i>
                            <p>
                                Mobile: (+84) 012.445.6789
                                Hotline: 1900.4567
                            </p>
                        </div>
                        <hr class="dashed">
                        <div class="email d-flex align-items-center">
                            <i class="fas fa-envelope"></i>
                            <p>
                                linhdr141020@gmail.com
                                support@wws.com
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <p class="content">Nội dung liên hệ</p>
                    
                    <div class="inputs">
                        <form action="/Home/Contact" method="post">
                        <div class="name" >
                            Họ tên
                            <input type="text" name="Name">
                        </div>
                        <div class="email" >
                            Email
                            <input type="text" name="Email">
                        </div>
                        <div class="title">
                            Tiêu đề
                            <input type="text" name="NumberPhone">
                        </div>
                        <div class="message" >
                            Tin nhắn
                            <input type="text"  id="textarea" cols="30" rows="10" name="Message"></input>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn">Gửi</button>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="map text-center">
        <div class="container">
            <p class="map-title">Địa chỉ</p>
            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d14893.840085796315!2d105.72339285!3d21.0542813!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1svi!2s!4v1635956971552!5m2!1svi!2s"
                    width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>

</div>

