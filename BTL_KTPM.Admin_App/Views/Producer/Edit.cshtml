@model BTL_KTPM.Application.Catalog.Producers.Dtos.UpdateProducerRequest

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid px-4">
    <h1 class="mt-4">Sửa thông tin danh mục</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
        <li class="breadcrumb-item active">Sửa thông tin nhà cung cấp </li>
    </ol>
    <div style="margin: 20px 0;">
        <a class="btn btn-success" asp-action="Index" asp-controller="Producer">Danh sách nhà cung cấp</a>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group">
                            <label asp-for="ProducerName" class="control-label"></label>
                            <input asp-for="ProducerName" class="form-control" />
                            <span asp-validation-for="ProducerName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SĐT" class="control-label"></label>
                            <input asp-for="SĐT" class="form-control" />
                            <span asp-validation-for="SĐT" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address" class="control-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="id" />
                            <input type="submit" value="Save" class="btn btn-primary" style="margin: 20px 0;"/>
                        </div>

                    </form>
                </div>
            </div>
        </div>

    </div>
</div>


