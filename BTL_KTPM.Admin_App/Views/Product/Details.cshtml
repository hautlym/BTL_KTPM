@model BTL_KTPM.Application.Catalog.Products.Dtos.ProductViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string url = "http://192.168.2.102:7022/user-content/";

}
<div class="container-fluid px-4">
    <h1 class="mt-4">Thông tin sản phẩm</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
        <li class="breadcrumb-item active">Thông tin sản phẩm </li>
    </ol>
    <div style="margin: 20px 0;">
        <a class="btn btn-success" asp-action="Index" asp-controller="Product">Danh sách sản phẩm</a>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-2">
                            Hình ảnh
                        </dt>
                        <dd class="col-sm-10">
                            <img src="@Url.Content(url+Model.ThumbnailImage[0].ImagePath)" style="height:200px; width:200px" />

                        </dd>
                        <dt class="col-sm-2">
                            Tên sản phẩm:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductName)
                        </dd>

                        <dt class="col-sm-2">
                            Tiêu đề:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductTitle)
                        </dd>
                        <dt class="col-sm-2">
                            Giá sản phẩm
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductOriginalPrice)
                        </dd>
                        <dt class="col-sm-2">
                            Mô tả:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductDescription)
                        </dd>


                        <dt class="col-sm-2">
                            Giảm giá:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Discount)
                        </dd>

                    </dl>
                    <div style="margin: 20px 0;">
                        <a class="btn btn-success" @Html.ActionLink("Sửa", "Edit", new { id = @Model.Id })</a>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

