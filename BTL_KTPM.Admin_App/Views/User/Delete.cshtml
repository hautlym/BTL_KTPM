@using BTL_KTPM.Application.Catalog.System.Dtos
@model DeleteUserRequest

@{
    ViewData["Title"] = "Xóa người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid px-4">
    <h1 class="mt-4">Xóa người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
        <li class="breadcrumb-item active">Xóa người dùng </li>
    </ol>
    <div style="margin: 20px 0;">
        <a class="btn btn-success" asp-action="Index" asp-controller="User">Danh sách người dùng</a>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.id)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.id)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input asp-for="id" type="hidden" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> 
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

